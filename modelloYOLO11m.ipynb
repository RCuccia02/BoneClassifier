   "source": [
    "# Check GPU\n",
    "device = 'cuda' if torch.cuda.is_available() else 'cpu'\n",
    "print(f\"Using device: {device}\")\n",
    "print(f\"GPU name: {torch.cuda.get_device_name(0) if device == 'cuda' else 'CPU'}\")\n",
    "\n",
    "config = {\n",
    "    \"data\": \"./archive/Human Bone Fractures Multi-modal Image Dataset (HBFMID)/Bone Fractures Detection/data.yaml\",\n",
    "    \"epochs\": 1,\n",
    "    \"imgsz\": 640,\n",
    "    \"batch\": 16 if device == 'cuda' else 4,\n",
    "    \"device\": device,\n",
    "    \"name\": \"exp1\",\n",
    "    \"exist_ok\": True,\n",
    "    \"optimizer\": \"AdamW\",\n",
    "    \"lr0\": 0.001,\n",
    "    \"pretrained\": True,\n",
    "    \"cos_lr\": True,\n",
    "    \"weight_decay\": 0.0005,\n",
    "    \"fliplr\": 0.5, \n",
    "    \"mosaic\": 1.0,  \n",
    "    \"mixup\": 0.2, \n",
    "    \"close_mosaic\": 10, \n",
    "    \"patience\": 15,  \n",
    "    \"save_period\": 5,  \n",
    "    \"single_cls\": False, \n",
    "}\n",
    "\n",
    "def start_training(model, model_name, config):\n",
    "    try:\n",
    "        config[\"project\"] = \"yolo_fracture_detection_\" + model_name\n",
    "        results = model.train(**config)\n",
    "        print(\"Training completed successfully!\")\n",
    "        return results\n",
    "    except Exception as e:\n",
    "        print(f\"Training failed: {str(e)}\")\n",
    "    "
   ]
